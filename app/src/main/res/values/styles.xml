<resources>

    <!--主题-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/theme_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>

    <!--分割线样式-->
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray_light</item>
    </style>

    <!--按钮样式-->
    <style name="btn__font_normal__gravity_center__width_fill">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:color">@color/text_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>
    <style name="btn__font_normal__gravity_center__height_fill">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:color">@color/text_white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

</resources>
