<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_main_ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="example.abe.com.android.activity.assets.AssetsActivity">

    <ImageView
        android:id="@+id/act_abassets_iv_root_png"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/act_abassets_iv_file_png"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/act_abassets_iv_root_png"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:scaleType="center" />

    <TextView
        android:id="@+id/act_abassets_tv_file_list"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/act_abassets_iv_file_png"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:scaleType="center" />

</RelativeLayout>
