<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="example.abe.com.android.activity.contentprovider.contacts.ContactsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/act_contacts_btn_get_all_contacts"
            style="@style/btn__font_normal__gravity_center__height_fill"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="获取手机联系人信息"/>

        <Button
            android:id="@+id/act_contacts_btn_get_contact"
            style="@style/btn__font_normal__gravity_center__height_fill"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="获取15757585822联系人"/>

        <Button
            android:id="@+id/act_contacts_btn_add_contact"
            style="@style/btn__font_normal__gravity_center__height_fill"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="添加联系人"/>
    </LinearLayout>

    <ScrollView
        style="@style/btn__font_normal__gravity_center__width_fill"
        android:layout_height="0dp"
        android:layout_weight="3">
        <TextView
            android:id="@+id/act_contacts_edit_text_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

</LinearLayout>
