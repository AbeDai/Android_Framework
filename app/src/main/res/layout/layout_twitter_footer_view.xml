<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ProgressBar
        android:id="@+id/layout_twitter_footer_view_progressbar"
        style="?android:attr/progressBarStyleSmallInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/layout_twitter_footer_view_tv_load_more" />

    <ImageView
        android:id="@+id/layout_twitter_footer_view_iv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/layout_twitter_footer_view_tv_load_more"
        android:background="@drawable/icon_refresh_success" />

    <TextView
        android:id="@+id/layout_twitter_footer_view_tv_load_more"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="LoadMore"
        android:textColor="?attr/colorPrimary" />

</RelativeLayout>