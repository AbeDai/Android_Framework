<example.abe.com.framework.refresh.SwipeToLoadLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_twitter_scroll_view_swipe_to_load"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.refresh.RefreshActivity">

    <example.abe.com.android.activity.refresh.ui.TwitterHeaderView
        android:id="@id/swipe_refresh_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:id="@id/swipe_target"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="50dp"
                android:src="@drawable/icon_card_view"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="50dp"
                android:src="@drawable/icon_card_view"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="50dp"
                android:src="@drawable/icon_card_view"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="50dp"
                android:src="@drawable/icon_card_view"/>
        </LinearLayout>
    </ScrollView>

    <example.abe.com.android.activity.refresh.ui.TwitterFooterView
        android:id="@id/swipe_load_more_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</example.abe.com.framework.refresh.SwipeToLoadLayout>
