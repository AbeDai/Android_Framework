<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_messager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.abe.com.android_framework.activity.ipc.messenger.MessengerActivity">

    <Button
        android:id="@+id/act_messenger_btn_server_remote"
        style="@style/btn__font_normal__gravity_center__width_fill"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="开始后台服务"/>

    <Button
        android:id="@+id/act_messenger_btn_send_messenger"
        style="@style/btn__font_normal__gravity_center__width_fill"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="发送消息到后台"/>
    
    <TextView
        android:id="@+id/act_messenger_tv_show"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="20sp"
        android:textColor="@android:color/black"/>

</RelativeLayout>
