<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="horizontal"
    tools:context="example.abe.com.android_framework.MainActivity">

    <ListView
        android:id="@+id/act_main_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/act_main_btn_ablog"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_height="0dp"
            android:text="@string/btn_title_log"
            android:textSize="10sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/act_main_btn_abtime_util"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_height="0dp"
            android:text="@string/btn_title_time_util"
            android:textSize="10sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/act_main_btn_recycle_view"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_height="0dp"
            android:text="@string/btn_title_recycle_view"
            android:textSize="10sp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/act_main_btn_segmentview"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_height="0dp"
            android:text="@string/btn_title_segment_view"
            android:textSize="10sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/act_main_btn_retrofit"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_height="0dp"
            android:text="@string/btn_title_retrofit"
            android:textSize="10sp"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>
