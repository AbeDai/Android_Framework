    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_all_display_grid_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.abe.com.android.activity.alldisplay.AllDisplayGridViewActivity">

    <example.abe.com.android.activity.alldisplay.AllDisplayGridView
