<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_third"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.abe.com.android_framework.activity.eventbus.EventBusSecondActivity">

    <Button
        android:id="@+id/act_third_btn_event1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="发送事件1"
        android:textSize="25sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/act_third_btn_event2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="发送事件2"
        android:textSize="25sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/act_third_btn_event3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="发送事件3"
        android:textSize="25sp"
        android:gravity="center"/>

</LinearLayout>