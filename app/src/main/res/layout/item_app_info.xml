<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="40dp">

    <ImageView
        android:id="@+id/item_app_info_iv_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/item_app_info_tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用名: "/>

        <TextView
            android:id="@+id/item_app_info_tv_app_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/item_app_info_tv_label"
            android:textColor="#FFD700"/>

        <TextView
            android:id="@+id/item_app_info_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_app_info_tv_label"
            android:text="包名: "/>

        <TextView
            android:id="@+id/item_app_info_tv_pkg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_app_info_tv_label"
            android:layout_below="@id/item_app_info_tv_label"
            android:textColor="#FFD700"/>
    </RelativeLayout>
</LinearLayout>