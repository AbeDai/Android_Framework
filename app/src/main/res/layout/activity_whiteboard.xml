<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.abe.com.android_framework.activity.drawing.whiteboard.WhiteboardActivity">

    <example.abe.com.android_framework.activity.drawing.whiteboard.PenPaintView
        android:id="@+id/act_whiteboard_pen_paint_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/act_whiteboard_ll_tool_bar"/>

    <LinearLayout
        android:id="@+id/act_whiteboard_ll_detail_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/act_whiteboard_ll_tool_bar"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/act_whiteboard_ll_detail_tool_bar_color"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/act_whiteboard_btn_color_red"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="红色"/>

            <Button
                android:id="@+id/act_whiteboard_btn_color_blue"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="蓝色"/>

            <Button
                android:id="@+id/act_whiteboard_btn_color_green"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="绿色"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/act_whiteboard_ll_detail_tool_bar_width"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/act_whiteboard_btn_width_bold"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="粗"/>

            <Button
                android:id="@+id/act_whiteboard_btn_width_normal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="中"/>

            <Button
                android:id="@+id/act_whiteboard_btn_width_light"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="细"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/act_whiteboard_ll_detail_tool_bar_eraser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/act_whiteboard_btn_eraser_big"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="大"/>

            <Button
                android:id="@+id/act_whiteboard_btn_eraser_normal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="中"/>

            <Button
                android:id="@+id/act_whiteboard_btn_eraser_small"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="小"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_whiteboard_ll_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/act_whiteboard_btn_color"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="颜色"/>

        <Button
            android:id="@+id/act_whiteboard_btn_width"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="粗细"/>

        <Button
            android:id="@+id/act_whiteboard_btn_eraser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="橡皮"/>

        <Button
            android:id="@+id/act_whiteboard_btn_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="文字"/>

        <Button
            android:id="@+id/act_whiteboard_btn_rect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="图形"/>

        <Button
            android:id="@+id/act_whiteboard_btn_restore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="还原"/>

        <Button
            android:id="@+id/act_whiteboard_btn_un_restore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="反还原"/>
    </LinearLayout>
</RelativeLayout>
