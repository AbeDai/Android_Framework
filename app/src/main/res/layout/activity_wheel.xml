<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wheel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="example.abe.com.android.activity.wheel.WheelActivity">

    <example.abe.com.android.activity.wheel.wheelview.WheelView
        android:id="@+id/act_wheel_wheel_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/act_wheel_btn_change_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改数据"/>

    <Button
        android:id="@+id/act_main_btn_remove_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除数据"/>

    <Button
        android:id="@+id/act_main_btn_replace_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="替换数据"/>

</LinearLayout>
