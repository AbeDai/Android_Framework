<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="example.abe.com.android.activity.multithread.IntentServiceActivity">

    <Button
        android:id="@+id/act_intent_service_btn_intent1_start"
        style="@style/btn__font_normal__gravity_center__width_fill"
        android:layout_height="100dp"
        android:text="启动任务一"/>

    <Button
        android:id="@+id/act_intent_service_btn_intent2_start"
        style="@style/btn__font_normal__gravity_center__width_fill"
        android:layout_height="100dp"
        android:text="启动任务二"/>

    <TextView
        android:id="@+id/act_intent_service_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_normal"/>

</LinearLayout>
