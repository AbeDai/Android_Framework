<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_abretrofit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="example.abe.com.android.activity.retrofit.RetrofitActivity">

    <Button
        android:id="@+id/act_retrofit_login"
        style="@style/btn__font_normal__gravity_center__width_fill"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="登录"/>

    <Button
        android:id="@+id/act_retrofit_logout"
        style="@style/btn__font_normal__gravity_center__width_fill"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="登出"/>


    <EditText
        android:id="@+id/et_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:editable="false"
        android:gravity="left|top"
        android:inputType="textMultiLine"/>
</LinearLayout>
