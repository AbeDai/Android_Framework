<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/act_okhttp_base_btn_sync_get_json"
        style="@style/btn__font_normal__gravity_center__width_fill"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Sync Get Json"/>

    <Button
        android:id="@+id/act_okhttp_base_btn_sync_post_json"
        style="@style/btn__font_normal__gravity_center__width_fill"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Sync Post Json"/>

    <Button
        android:id="@+id/act_okhttp_base_btn_async_get_json"
        style="@style/btn__font_normal__gravity_center__width_fill"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Async Get Json"/>

    <Button
        android:id="@+id/act_okhttp_base_btn_async_post_json"
        style="@style/btn__font_normal__gravity_center__width_fill"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Async Post Json"/>

    <EditText
        android:id="@+id/act_okhttp_base_et_show"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="left|top"/>

</LinearLayout>
