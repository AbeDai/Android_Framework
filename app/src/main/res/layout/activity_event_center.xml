<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="example.abe.com.android_framework.activity.eventcenter.EventCenterActivity">

    <TextView
        android:id="@+id/act_event_center_tv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="waste"
        android:textSize="32sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/act_event_center_btn_register"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="register"
        android:textSize="32sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/act_event_center_btn_unregister"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="unrigister"
        android:textSize="32sp"
        android:gravity="center"/>


    <Button
        android:id="@+id/act_event_center_btn_post_event"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="发送消息"
        android:textSize="32sp"
        android:gravity="center"/>
    </LinearLayout>
