<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="example.abe.com.android_framework.activity.eventcenter.EventCenterActivity">

    <TextView
        android:id="@+id/act_event_center_tv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="waste"
        android:textSize="32sp"/>

    <Button
        android:id="@+id/act_event_center_btn_register"
        style="@style/btn__font_normal__gravity_center__width_fill"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="register"/>

    <Button
        android:id="@+id/act_event_center_btn_unregister"
        style="@style/btn__font_normal__gravity_center__width_fill"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="unrigister"/>


    <Button
        android:id="@+id/act_event_center_btn_post_event"
        style="@style/btn__font_normal__gravity_center__width_fill"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="发送消息"/>
</LinearLayout>
