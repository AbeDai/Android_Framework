<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activity.socket.image.ImageSocketActivity">

<Button
    android:id="@+id/act_image_socket_btn_start"
    style="@style/btn__font_normal__gravity_center__width_fill"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:text="开启Socket Server"/>

<Button
    android:id="@+id/act_image_socket_btn_send"
    style="@style/btn__font_normal__gravity_center__width_fill"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:text="发送图片"/>

<Button
    android:id="@+id/act_image_socket_btn_stop"
    style="@style/btn__font_normal__gravity_center__width_fill"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:text="关闭Socket Server"/>

<ImageView
    android:id="@+id/act_image_socket_iv_display"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3"
    android:scaleType="center"/>

</LinearLayout>
